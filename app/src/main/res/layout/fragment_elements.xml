<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/elements_root_frame" android:background="@color/white" android:visibility="visible" android:layout_width="match_parent" android:layout_height="250dp" android:layout_alignParentBottom="true">
        <TextView android:textSize="16sp" android:textColor="@color/black" android:gravity="center" android:id="@+id/sel_txt" android:layout_width="match_parent" android:layout_height="60dp" android:layout_marginTop="5dp" android:text="Select Photo" android:fontFamily="@font/prosto_one"/>
        <View android:background="@color/grey" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="15dp" android:layout_marginTop="2dp" android:layout_marginRight="15dp" android:layout_marginBottom="15dp" android:layout_below="@+id/sel_txt"/>
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="100dp" android:layout_marginTop="15dp" android:layout_below="@+id/sel_txt">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/camera_btn_linear" android:layout_width="0dp" android:layout_height="match_parent" android:weightSum="2" android:layout_weight="1">
                <ImageView android:id="@+id/camera_btn_img" android:padding="2dp" android:layout_width="match_parent" android:layout_height="0dp" android:src="@drawable/camera_icon_2" android:layout_weight="1.35"/>
                <TextView android:textSize="12sp" android:textColor="@color/black" android:gravity="center" android:layout_width="match_parent" android:layout_height="0dp" android:text="Camera" android:layout_weight="0.65" android:fontFamily="@font/prosto_one"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/gallery_btn_linear" android:layout_width="0dp" android:layout_height="match_parent" android:weightSum="2" android:layout_weight="1">
                <ImageView android:id="@+id/gallery_btn_img" android:padding="2dp" android:layout_width="match_parent" android:layout_height="0dp" android:src="@drawable/gallery_icon_2" android:layout_weight="1.35"/>
                <TextView android:textSize="12sp" android:textColor="@color/black" android:gravity="center" android:layout_width="match_parent" android:layout_height="0dp" android:text="Gallery" android:layout_weight="0.65" android:fontFamily="@font/prosto_one"/>
            </LinearLayout>
            <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/stickers_btn_linear" android:visibility="visible" android:layout_width="0dp" android:layout_height="match_parent" android:weightSum="2" android:layout_weight="1">
                <ImageView android:id="@+id/stickers_btn_img" android:padding="4dp" android:layout_width="match_parent" android:layout_height="0dp" android:src="@drawable/sticker_icon_2" android:layout_weight="1.35"/>
                <TextView android:textSize="12sp" android:textColor="@color/black" android:gravity="center" android:layout_width="match_parent" android:layout_height="0dp" android:text="Stickers" android:layout_weight="0.65" android:fontFamily="@font/prosto_one"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:id="@+id/hidden_down" android:background="@color/water_mak_color_white" android:padding="2dp" android:layout_width="match_parent" android:layout_height="40dp" android:src="@drawable/hidden_down" android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</FrameLayout>
