<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/Aztec_Purple"
    android:gravity="center"
    android:layout_height="47dp">

    <LinearLayout
        android:id="@+id/step1_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">
        <Button
            android:id="@+id/header_design_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إلغاء"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/Valentine_Red"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:fontFamily="@font/jannafont"
            android:text="المرحلة 1 : تصميم الخلفية"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16dp" />

        <Button
            android:id="@+id/header_design_btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التالي"
           android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@color/Beer"
            android:layout_gravity="center"/>




    </LinearLayout>
    <LinearLayout
        android:id="@+id/step2_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:orientation="horizontal">
        <Button
            android:id="@+id/header_design_btn_cancel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إلغاء"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/Valentine_Red"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/header_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:fontFamily="@font/jannafont"
            android:text="المرحلة 2 : التصميم النهائي"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16dp" />

        <Button
            android:id="@+id/header_design_btn_next2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="التالي"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:background="@color/Beer"
            android:layout_gravity="center"/>




    </LinearLayout>

    <RelativeLayout
        android:id="@+id/orginal_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">
        <ImageView
            android:id="@+id/back_to_main"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:padding="5dp"
            android:src="@mipmap/ic_back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Card Maker"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/save_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/save_image"
            app:tint="@color/white" />
    </RelativeLayout>



</LinearLayout>