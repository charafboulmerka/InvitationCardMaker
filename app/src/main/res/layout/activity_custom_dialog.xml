<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="wrap_content" android:layout_height="wrap_content" app:cardBackgroundColor="@color/grey">
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:background="@drawable/gradient_back_exit" android:layout_width="350dp" android:layout_height="200dp">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="10dp">
            <TextView android:textSize="20sp" android:textColor="@color/black" android:gravity="center_horizontal" android:id="@+id/dialog_msg" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="msg" android:fontFamily="@font/prosto_one"/>
            <TextView android:textSize="14sp" android:textColor="@color/dark_grey" android:id="@+id/dialog_msg_sub" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:text="msgSub" android:fontFamily="@font/prosto_one" android:textAlignment="center"/>
            <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:paddingLeft="50dp" android:paddingTop="10dp" android:paddingRight="50dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp">
                <TextView android:textSize="16sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/dialog_cancel" android:background="@drawable/red" android:paddingTop="1dp" android:paddingBottom="7dp" android:visibility="invisible" android:layout_width="0dp" android:layout_height="35dp" android:text="Cancel" android:layout_weight="1" android:fontFamily="@font/prosto_one"/>
                <TextView android:textSize="14sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/dialog_ok" android:background="@drawable/blue" android:paddingTop="1dp" android:paddingBottom="7dp" android:layout_width="0dp" android:layout_height="35dp" android:layout_marginLeft="30dp" android:text="Ok" android:layout_weight="1" android:fontFamily="@font/prosto_one"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
